---
import Layout from "../../layouts/Layout.astro";
import type { PokemonListResponse } from "../../interfaces/pokemon-list.response";
import Hero from "../../components/Hero.astro";
import PokemonCard from "../../components/Pokemon/PokemonCard.astro";
const resp = fetch("https://pokeapi.co/api/v2/pokemon");
const data = (await resp.then((res) => res.json())) as PokemonListResponse;
// console.log("data", data);
---

<Layout title="Pokémon" description="Listado de Pokémon">
    <Hero title="Pokémon" tagline="Listado de Pokémon" />
    <hr class="w-screen" />
    <section
        aria-label="Listado de Pokémons"
        class="grid w-screen grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4 p-4"
    >
        {
            data.results.map((pokemon) => (
                <PokemonCard
                    name={pokemon.name}
                    enlace={pokemon.url}
                />
            ))
        }
    </section>
    <!-- <ul class="space-y-2 mx-3">
        {data.results.map((pokemon) => (
            <li class="">{pokemon.name}</li>
        ))}
    </ul> -->
</Layout>
