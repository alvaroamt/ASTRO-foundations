---
interface Props {
    name: string;
    enlace: string;
    // description: String,
}

const { name, enlace } = Astro.props;
const id = enlace.split('/').at(-2);
const src = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<div class="bg-primary/15 max-w-sm rounded overflow-hidden shadow-lg">
  <img class="w-full" src={src} alt={name}>
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">{name}</div>
